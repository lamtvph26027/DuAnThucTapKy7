@model App_data.Models.ChiTietSanPham
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    App_data.Models.AppDbcontext dBContext = new App_data.Models.AppDbcontext();
    List<string> imageExtensions = new List<string>()
    {
         ".png", ".jpg", ".jpeg", ".gif", ".tiff", ".pdf",".webp",".jfif"
    };
}
@{
    var anh = dBContext.MauSacs.FirstOrDefault(x => x.Id == Model.IdMauSac);
    if (anh != null)
    {
        string extension = System.IO.Path.GetExtension(anh.AnhMauSac);
        if (imageExtensions.Contains(extension.Trim()))
        {
            <div class="carousel-item active">
                <img class="w-100 h-100" src="~/userassets/img/@anh.AnhMauSac" alt="Image">
            </div>
        }
        else
        {
            <img src="~/imgs/product-2.jpg" height="100px">
        }
    }

}
