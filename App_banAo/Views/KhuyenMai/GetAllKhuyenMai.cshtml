@using App_data.Models
@using App_data.ViewModels.ChiTietSPView
@model App_banAo.Models.ProductListViewModel

@{
    ViewData["Title"] = "GetAllKhuyenMai";
    Layout = "~/Areas/Admin/Views/Shared/Admin_Layout.cshtml"; int stt = 1;
    List<KhuyenMaiView> listkms = ViewBag.KhuyenMaiView;
    List<ChiTietSanPham> listctsps = ViewBag.ChiTietSanPham;
    List<Anh> listanhs = ViewBag.Anh;
    List<string> imageExtensions = new List<string>()
    {
         ".png", ".jpg", ".jpeg", ".gif", ".tiff", ".pdf",".webp",".jfif"
    };



}
<h2>Quản Lý Khuyến Mãi Sản Phẩm</h2>

<p>
    <a asp-controller="KhuyenMai" asp-action="AddKHuyenMaiVoSP">Thêm Khuyến Mãi vô Sản Phẩm</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                STT
            </th>

            <th>
                Tên SP
            </th>
           
            <th>
                Tên Khuyến Mãi
            </th>
            <th>
                Tên Màu Sắc
            </th>
            <th>
                Tên Size
            </th>
            <th>
                Giá Khuyến Mãi
            </th>
            <th>
                Giá Trị KM
            </th>
            <th>
                Giá Gốc
            </th>
            <th>
                Trạng Thái
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.chiTietSanPhams)
        {
            <tr>
                <td>
                    @stt
                </td>

                <td>
                    <strong style="color:red">@item.TenSanPham</strong>
                </td>
                
                <td>
                    @{
                        var idCt = listctsps.FirstOrDefault(x => x.Id == item.Id);
                        var tk = listkms.FirstOrDefault(x => x.Id == idCt.IdKhuyenMai);
                        if (tk != null)
                        {if(tk.NgayKetThuc>=DateTime.Now)
                            {
                                <strong style="color:green">@tk.Ten</strong>
                            }
                            else if(tk.NgayKetThuc < DateTime.Now){
                                <strong style="color:red">@tk.Ten hết hạn rồi</strong>
                            }
                                            
                        }
                        else{
                                            <strong></strong>
                        }
                    }
                </td>

                <td>
                    <strong style="color:brown">@item.TenMauSac</strong>
                </td>
                <td>
                    <strong style="color:red">@item.TenSize</strong>
                </td>
                <td>
                    @{
                        if(tk!=null){
                            if(tk.NgayKetThuc>=DateTime.Now){
                                <strong style="color:green">$@(item.GiaKhuyenMai - item.GiaKhuyenMai * tk.GiaTri / 100) VND</strong>
                            }
                            else if (tk.NgayKetThuc < DateTime.Now)
                            {
                                <strong style="color:red">$@item.GiaGoc.ToString("n0") VND</strong>
                            }
                        }
                        else{
                            <strong style="color:red">$@item.GiaGoc.ToString("n0") VND</strong>
                        }
                    }
                   
                </td>
                <td>
                  @{
                      if(tk!=null){
                            <strong style="color:green">@tk.GiaTri%</strong>
                    }
                    else{
                                <strong></strong>
                    }
                   }
                    
                </td>
                <td>
                    <strong style="color:red"><del>$@item.GiaGoc.ToString("n0") VND</del></strong>
                </td>
                <td>
                    @{
                       
                        if(item.TrangThai==0){
                            <strong style="color:red">Hết Hàng</strong>
                        }
                        else{
                            <strong style="color:green">Còn Hàng</strong>
                        }
                    }
                    
                </td>
                <td>
                    <button class="btn btn-success">
                        @Html.ActionLink("Sửa", "Update", new { id = item.Id }, new { @style = "color:white;" })
                    </button>
                    <button class="btn btn-primary">
                        @Html.ActionLink("Chi tiết", "Details", new { id = item.Id }, new { @style = "color:white;" })
                    </button>
                    <button class="btn btn-danger">
                        @Html.ActionLink("Xóa", "Delete", new { id = item.Id }, new { @style = "color:white;" })
                    </button>
                </td> @{
                    stt++;
                }
            </tr>
        }
    </tbody>
</table>
<div class="col-12">
    <nav>
        <ul class="pagination justify-content-center">
            <li class="page-item disabled"><a class="page-link" href="#">Previous</span></a></li>
            @for (int i = 1; i <= Model.PagingInfo.TotalPages; i++)
            {
                <li class="page-item"><a class="page-link" href="/KhuyenMai/GetAllKhuyenMai?ProductPage=@i">@i</a></li>

}

            <li class="page-item"><a class="page-link" href="#">Next</a></li>
        </ul>
    </nav>
</div>
