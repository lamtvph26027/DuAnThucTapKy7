@model IEnumerable<App_data.Models.TaiKhoan>

@{
    ViewData["Title"] = "GetAllTKKH";
    Layout = "~/Areas/Admin/Views/Shared/Admin_Layout.cshtml"; int stt = 1;
}

<h2>GetAllTKKH</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                STT
            </th>
            <th>
                Tên
            </th>
            <th>
                Tên Đệm
            </th>
            <th>
                Họ
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                Giới Tính
            </th>
            <th>
                Ngày Sinh
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                Địa Chỉ
            </th>
            <th>
                Số Điện Thoại
            </th>
            <th>
                Trạng Thái
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <strong>@stt</strong>
                </td>
                <td>
                    <strong>@item.TenDem</strong>
                </td>
                <td>
                    <strong>@item.TenDem</strong>

                </td>
                <td>
                    <strong>@item.Ho</strong>

                </td>
                <td >
                    <input type="password" disabled value="@item.Password">
                </td>
                <td>
                    @if (item.GioiTinh == 0)
                    {
                        <strong style="color:red">Nữ</strong>
                    }
                    else
                    {
                        <strong style="color:green">Nam</strong>
                    }
                </td>
                <td>
                    <strong>@item.NgaySinh</strong>
                </td>
                <td>
                    <strong>@item.Email</strong>

                </td>
                <td>
                    <strong>@item.DiaChi</strong>

                </td>
                <td>
                    <strong>@item.SDT</strong>
                </td>
                <td>
                    @if (item.TrangThai == 0)
                    {
                        <strong style="color:red">Không Hoạt Động</strong>
                    }
                    else
                    {
                        <strong style="color:green">Hoạt Động</strong>
                    }
                </td>
                <td>
                    <button class="btn btn-success">
                        @Html.ActionLink("Sửa", "Update", new { id = item.IdNguoiDung }, new { @style = "color:white;" })
                    </button>
                    <button class="btn btn-primary">
                        @Html.ActionLink("Chi tiết", "Details", new { id = item.IdNguoiDung }, new { @style = "color:white;" })
                    </button>
                    <button class="btn btn-danger">
                        @Html.ActionLink("Xóa", "Delete", new { id = item.IdNguoiDung }, new { @style = "color:white;" })
                    </button>
                </td> @{
                    stt++;
                }
            </tr>
        }
    </tbody>
</table>
