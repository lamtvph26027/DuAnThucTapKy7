@model App_data.Models.TaiKhoan

<h4>TaiKhoan</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @if (ViewData["Success"] != null)
        {
            <div id="successMessage" style="color:red">
                @ViewData["Success"]
            </div>
        }
        <form asp-action="UpdateTT">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="IdNguoiDung" class="form-control" style="display:none" />
