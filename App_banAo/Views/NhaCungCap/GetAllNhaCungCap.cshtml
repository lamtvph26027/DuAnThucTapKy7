@using App_data.Models
@model App_banAo.Models.NhaCungCapViewmodel

@{
    ViewData["Title"] = "GetAllNhaCungCap";
    Layout = "~/Areas/Admin/Views/Shared/Admin_Layout.cshtml"; int stt = 1;

}

<h2>Quản Lý Nhà Cung Cấp</h2>

<p>
    <button class="btn-default" style="color:white">@Html.ActionLink("Thêm mới", "Create")</button>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                STT
            </th>

            <th>
                Tên
            </th>
            <th>
                Trạng Thái
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.NhaCungCaps)
        {
            <tr>
                <td>
                    <strong>@stt</strong>
                </td>

                <td>
                    <strong>@item.Ten</strong>
                </td>
                <td>
                    <strong>@item.TrangThai</strong>
                </td>
                <td>
                    <button class="btn btn-success">
                        @Html.ActionLink("Sửa", "Update", new { id = item.Id }, new { @style = "color:white;" })
                    </button>
                    <button class="btn btn-primary">
                        @Html.ActionLink("Chi tiết", "Details", new { id = item.Id }, new { @style = "color:white;" })
                    </button>
                    <button class="btn btn-danger">
                        @Html.ActionLink("Xóa", "Delete", new { id = item.Id }, new { @style = "color:white;" })
                    </button>
                </td> @{
                    stt++;
                }
            </tr>
        }
    </tbody>
</table>

<div class="col-12">
    <nav>
        <ul class="pagination justify-content-center">
            <li class="page-item disabled"><a class="page-link" href="#">Previous</span></a></li>
            @for (int i = 1; i <= Model.PagingInfo.TotalPages; i++)
            {
                <li class="page-item"><a class="page-link" href="/NhaCungCap/GetAllNhaCungCap?ProductPage=@i">@i</a></li>

            }

            <li class="page-item"><a class="page-link" href="#">Next</a></li>
        </ul>
    </nav>
</div>

