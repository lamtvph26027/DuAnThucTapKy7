@model IEnumerable<App_data.Models.Size>

@{
    ViewData["Title"] = "GetAllSize";
    Layout = "~/Areas/Admin/Views/Shared/Admin_Layout.cshtml"; int stt = 1;

}

<h2>Quản Lý Kích Cỡ</h2>

<p>
    <a asp-action="Create">Thêm Mới</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                STT
            </th>

            <th>
                Tên
            </th>
            <th>
                Trạng Thái
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @stt
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Ten)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TrangThai)
                </td>
                <td>
                    <button class="btn btn-success">
                        @Html.ActionLink("Sửa", "Update", new { id = item.Id }, new { @style = "color:white;" })
                    </button>
                    <button class="btn btn-primary">
                        @Html.ActionLink("Chi tiết", "Details", new { id = item.Id }, new { @style = "color:white;" })
                    </button>
                    <button class="btn btn-danger">
                        @Html.ActionLink("Xóa", "Delete", new { id = item.Id }, new { @style = "color:white;" })
                    </button>
                </td> @{
                    stt++;
                }
            </tr>
        }
    </tbody>
</table>
