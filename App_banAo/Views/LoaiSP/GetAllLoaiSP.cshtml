@model IEnumerable<App_data.Models.LoaiSP>
@{
    ViewData["Title"] = "GetAllLoaiSP";
    Layout = "~/Areas/Admin/Views/Shared/Admin_Layout.cshtml";
    App_data.Models.AppDbcontext dBContext = new App_data.Models.AppDbcontext();
}

<h2>Quản Lý Loại Sản Phẩm</h2>

<p>
    <a asp-action="Create">Thêm Mới</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Tên
            </th>
            <th>
                Trạng thái
            </th>
            <th>
                Sản phẩm cha
            </th>
            <th>
                Chất iệu
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Ten)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TrangThai)
                </td>
                <td>
                    @{
                        var loaiSPcha = dBContext.LoaiSPs.Find(item.IdLoaiSPCha);
                        if (loaiSPcha != null)
                        {
                            @loaiSPcha.Ten
                        }
                        else
                        {
                            <p> Khong co san pham cha</p>
                        }
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdChatLieu)
                </td>
                <td>
                    <button class="btn btn-success">
                        @Html.ActionLink("Sửa", "Update", new { id = item.Id }, new { @style = "color:white;" })
                    </button>
                    <button class="btn btn-primary">
                        @Html.ActionLink("Chi tiết", "Details", new { id = item.Id }, new { @style = "color:white;" })
                    </button>
                    <button class="btn btn-danger">
                        @Html.ActionLink("Xóa", "Delete", new { id = item.Id }, new { @style = "color:white;" })
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>
